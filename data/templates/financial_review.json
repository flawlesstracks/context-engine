    {
      "rule_id": "net_income_match",
      "description": "Net Income on Income Statement must match Net Income in Balance Sheet equity section",
      "fields": ["income.net_income", "balance.eq_net_income"],
      "validation": "exact",
      "severity": "CRITICAL"
    },
    {
      "rule_id": "cash_position_match",
      "description": "Ending Cash on Cash Flow Statement must match Cash on Balance Sheet",
      "fields": ["cashflow.ending_cash_position", "balance.ca_cash"],
      "validation": "exact",
      "severity": "CRITICAL"
    },
    {
      "rule_id": "balance_sheet_equation",
      "description": "Total Assets must equal Total Liabilities + Total Equity",
      "fields": ["balance.total_assets", "balance.total_liabilities", "balance.total_equity"],
      "validation": "sum",
